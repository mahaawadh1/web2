@{
}
@model List<Employee>
<h2>Employee List</h2>

<table>
    <thead>
        <tr>
            <th style="background-color: #eee; font-weight: bold;">FirstName</th>
            <th style="background-color: #eee; font-weight: bold;">LastName</th>
            <th style="background-color: #eee; font-weight: bold;">Email</th>
            <th style="background-color: #eee; font-weight: bold;">Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td style="padding: 16px;">@employee.FirstName</td>
                <td style="padding: 16px;">@employee.LastName</td>
                <td style="padding: 16px;">@employee.Email</td>
                <td style="padding: 16px;">@employee.Department</td>
            </tr>
        }
    </tbody>
</table>